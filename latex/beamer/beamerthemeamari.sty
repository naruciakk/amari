\newcommand{\fullframe}[2][]{
	\ifthenelse{\equal{#1}{}}{
		\begin{frame}[plain,nonavigation]
			\begin{tikzpicture}
				\useasboundingbox (1cm, 0) rectangle(\slidewidth,\slideheight);
				\fill[color=AmariAccent] (0, 0) rectangle(\slidewidth,\slideheight);
				\node[text width=\the\paperwidth-1cm,align=center] at (0.5\slidewidth, 0.5\slideheight) {\color{AmariBaseText}\Large\owowhatsthis{#2}};
			\end{tikzpicture}
		\end{frame}
	}{
		\begin{frame}[plain,nonavigation,image=#1]
			\begin{tikzpicture}
				\useasboundingbox (1cm, 0) rectangle(\slidewidth,\slideheight);
				\node[text width=\the\paperwidth,align=center] at (0.5\slidewidth, 0.5\slideheight) {\color{AmariBaseText}\Large\owowhatsthis{#2}};
			\end{tikzpicture}
		\end{frame}
	}
}

